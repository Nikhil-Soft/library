<h1 class="text-danger">All Actors</h1>

<h4>Polymorphic Association</h4>

<table cellpadding="0" cellspacing="0" border="1px" bgcolor="#eee" style="max-width: 1000px; width: 100%; margin: 0 auto;" >
	<thead>
		<tr>
			<th>SN</th>
			<th>Name</th>
			<th>Movies Count</th>
			<th>Age</th>
			<th>Experiences</th>
			<th>Action Link</th>

		</tr>
	</thead>
	<tbody>
		<% @actors.each do |actor| %>
			<tr>
				<td><strong><%= actor.id %></strong></td>
				<td><%= actor.name %></td>
				<td><%= actor.movies_count %></td>
				<td><%= actor.age %></td>
				<td><%= actor.experiences %></td>
				<td><%= link_to 'Show', actor_path(actor) %></td>
			</tr>
		<%end%>
	</tbody>
</table>



<p><%= link_to 'New Actor', new_actor_path %></p>
<p><%= link_to 'All Production', production_companies_path %></p>
