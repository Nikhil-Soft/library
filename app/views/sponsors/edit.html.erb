<% if params['flag'].present? %>

	<%= form_with model: @sponsor do |form| %>
		<p> 
			<%= form.label :Turnover %>
			<%= form.text_field :turnover %>
		</p>
		<p><%= form.submit %></p>
	<% end %>

<% else %>
<%= form_with model: @sponsor do |form| %>

	<p>
		<%= form.label :Name %>
		<%= form.select :team_id, options_for_select(Team.all.map{|b| [b.name, b.id]}) %>
	</p>

	<p><%= form.submit %></p>
<%end%>
<%end%>



<p><%= link_to 'Back', sponsor_path %></p>