<h1 class="text-danger">All Books</h1>

<table cellpadding="0" cellspacing="0" border="1px" bgcolor="#eee">
	<thead>
		<tr>
			<th>SN</th>
			<th>Name</th>
			<th>Decription</th>
			<th>Price</th>

		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><strong><%= book.id %></strong></td>
				<td><strong>Name: </strong> <%= book.name %></td>
				<td><strong>Decription: </strong> <%= book.decription %></td>
				<td><strong>Price: </strong> <%=book.price%></td>
				
				<td><%= link_to 'Show', book_path(book) %></td>
			</tr>
		<%end%>
	</tbody>
</table>