<h1 class="text-danger">All Production</h1>

<h4>Polymorphic Association</h4>

<table cellpadding="0" cellspacing="0" border="1px" bgcolor="#eee" >
	<thead>
		<tr>
			<th>SN</th>
			<th>Turnover</th>
			<th>Name</th>
			<th>Movies Count</th>
			<th> Pages </th>
		</tr>
	</thead>
	<tbody>
		<% @productions.each do |production| %>
			<tr>
				<td><strong><%= production.id %></strong></td>
				<td><strong>Name: </strong> <%= production.turnover %></td>
				<td><strong>Name: </strong> <%= production.name %></td>
				<td><strong>Name: </strong> <%= production.movies_count %></td>
				<td><%= link_to 'Show', production_company_path(production) %></td>
			</tr>
		<%end%>
	</tbody>
</table>



<p><%= link_to 'New Production Company', new_production_company_path %></p>
