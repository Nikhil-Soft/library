<h1 class="text-danger">All Author</h1>

<h4>Has Many Association</h4>

<table cellpadding="0" cellspacing="0" border="1px" bgcolor="#eee" style="max-width: 1000px; width: 100; margin: 0 auto;" >
	<thead>
		<tr>
			<th>SN</th>
			<th>Name</th>
			<th>Phone Number</th>
			<th>Bio</th>
			<th>Pages</th>

		</tr>
	</thead>
	<tbody>
		<% @authors.each do |author| %>
			<tr>
				<td><strong><%= author.id %></strong></td>
				<td><%= author.name %></td>
				<td><%= author.phone_number %></td>
				<td><%=author.bio%></td>
				
				<td><%= link_to 'Show', author_path(author) %></td>
			</tr>
		<%end%>
	</tbody>
</table>


<p><%= link_to 'New', new_author_path %></p>
<p><%= link_to 'All Books', books_path %></p>


