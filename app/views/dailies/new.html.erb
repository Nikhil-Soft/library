<div class="daily-entry-block">
	<center>
		<h2>Daily Entery Form</h2>
	</center>
			<%= form_with model: @daily do |form| %>
	<table width="600px" class="daily_entry" cellspacing="0" cellspacing="0" border="0">
		<tbody>
				<tr>
					<td>
					<p class="custom-label"><%= form.label :Date %></p>
					<p><%= form.date_field :date, class:"custom-field" %></p></td>
				</tr>
				<tr>
					<td>
						<p class="custom-label"><%= form.label :Expenses %></p>
						<p><%= form.text_field :expenses, class:"custom-field", placeholder: "Expenses" %></p>
					</td>
				</tr>
				<tr>
					<td>
						<p class="custom-label"><%= form.label :Details %></p>
						<p><%= form.text_field :details, class:"custom-field", placeholder: "Details" %></p>
					</td>
				</tr>
				<tr>
					<td><p class="text-center"><%= form.submit "Submit", class: "custom-btn" %></p></td>
				</tr>
			<tr>
				<td>
					<p><%= link_to 'Back', dailies_path, class: "custom-back-btn" %></p>
				</td>
			</tr>
		</tbody>
	</table>
			<%end%>
</div>
